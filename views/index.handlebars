
<h1>Chuanr!</h1>


<div class="row" >

  <div class="col-sm-4">
    <h2>Chuanr that are not eaten!</h2>
    <ul>
      {{#each chuanr}}
        {{#unless eaten}}
          {{> chuanr/chuanr-block eaten=true}}
        {{/unless}}
      {{/each}}
    </ul>
  </div> <!-- to col-sm-4 not-eaten-chuanr -->

  <div class="col-sm-4">
    <h2>Chuanr that are eaten!</h2>

    <ul>
      {{#each chuanr}}
        {{#if eaten}}
          {{> chuanr/chuanr-block eaten=false}}
        {{/if}}
      {{/each}}
    </ul>
  </div> <!-- to col-sm-4 eaten-chuanr -->

  <div class="col-sm-4">
    <div id="addachuar"> 

      <h2>Add a Chuanr</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="ca">Chuanr Type:</label>
          <input type="text" id="ca" name="chuanrtype">
        </div>

        <div class="form-group">
          <label for="eaten">Check if eaten:</label><br>
          <input type="checkbox" name="eaten" value="1"> Eaten!<br>
          {{!-- <input type="radio" name="eaten" value="0"> Not Yet Eaten --}}
        </div>

        <button type="submit">Add A Chuanr!</button>
      </form>

    </div>
  </div>


</div>